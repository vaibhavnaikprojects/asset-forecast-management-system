<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>AFMS</display-name>
  <welcome-file-list>
    <welcome-file>indexPage.jsp</welcome-file>
  </welcome-file-list>
  <welcome-file-list>
    <welcome-file>indexPage.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dispatcher</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AuthenticationServlet</filter-name>
    <filter-class>com.zensar.afnls.AuthenticationServlet</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationServlet</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.zensar.afnls.SessionTimeoutIndicator</listener-class>
  </listener>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/jsp/error.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
</web-app>